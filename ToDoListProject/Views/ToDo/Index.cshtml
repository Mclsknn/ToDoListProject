@using EntityLayer.Concrete
@model List<ToDo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>Yapılacak İş</th>
                <th>Açıklama</th>
                <th>Yapılacağı Tarih</th>
                <th>Yapıldı mı</th>
                <th>-</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                <td><label>@item.ToDoTitle</label></td>
                <td><label>@item.Description</label></td>
                <td><label>@Convert.ToDateTime(@item.toDoDate).ToShortDateString()</label></td>
                @if(@item.IsDone == true){
                    <td><input type="checkbox" class="custom-checkbox ml-2 mt-1" style="width:25px; height:25px;"  checked disabled/></td>
                }
                else{
                    <td><input  type="checkbox" class="custom-checkbox ml-2 mt-1" style="width:25px; height:25px;" /></td>
                }
                <td>
                    <a href="/ToDo/UpdateToDo/@item.ToDoID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/ToDo/DoneToDo/@item.ToDoID" class="btn btn-success btn-sm">Yapıldı</a>
                    <a href="/ToDo/DeleteToDo/@item.ToDoID" class="btn btn-danger btn-sm">Sil</a>
                    
                </td>
            </tr>
            }
           
        </tbody>

    </table>
</div>

